<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6  d-flex justify-content-center align-items-center">

            <div class="card">
                <img class="card-img-top" src=" <%= campground.image %>  " alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title%>
                    </h5>
                    <small class="text-muted">
                        <%=campground.location %>
                    </small>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <a class="btn btn-dark mb-2" href="/campgrounds/<%= campground._id %>/edit ">Edit</a>
                    <form action="/campgrounds/<%=campground._id %>?_method=DELETE" method="post">
                        <button class="btn btn-dander mb-2">Delete</button>
                    </form>
                    <a class="btn btn-dark mb-3" href="/campgrounds">Back to the campgrounds</a>

                    <hr>
                    <h2>Leave a review</h2>
                    <form action="/campgrounds/<%= campground._id %>/review " method="POST" novalidate
                        class="need-validation">
                        <div class="mb-3 "><label class="form-label" for="rating">Rating</label>
                            <input class="form-range" type="range" min='1' max="5" name="review[rating]" id="rating">
                        </div>
                        <label for="body" class="form-label">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <button class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-6">
            <div class="mb-3 my-3">
                <h2>Past reviews</h2>

                <%for(let review of campground.reviews) {%>
                    <div class="mb-3 card-body shadow">
                        <h5 class="card-title"></h5>
                        <h6 class="card-title">Rating: <%= review.rating %>
                        </h6>
                        <p class="card-text">
                            <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%= campground._id %>/review/<%= review._id %>?_method=DELETE"
                            method="post">
                            <button class="btn btn-sm btn-danger m-2">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>